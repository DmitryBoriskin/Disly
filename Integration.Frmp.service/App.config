<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
  </configSections>
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets>
      <target name="console" xsi:type="ColoredConsole" layout="${date:format=HH\:mm\:ss}|${level}|${message}"/>
      <target name="file" xsi:type="File" fileName="D:/Logs/medcap_integration/${shortdate}//${level}.txt" layout="${date:format=HH\:mm\:ss} | ${message}"/>
    </targets>
    <rules>
      <logger name="*" minlevel="Trace" writeTo="console,file"/>
    </rules>
  </nlog>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <connectionStrings>
    <add name="cmsdbConnection" providerName="System.Data.SqlClient" connectionString="Data Source=chuvashia.com;Database=DislyMVC;User Id=Disly_Dev;Password=Disly_pass;" />
  </connectionStrings>
  <appSettings>
    <add key="Integration.StartTime" value="00:00"/>
    <add key="Integration.DirName" value="D:\med_integration"/>
    <add key="Integration.FileName" value="data.xml"/>
    <add key="Employee.MinDate" value="1900.01.01"/>
    <add key="Employee.MaxDate" value="2200.12.31"/>
  </appSettings>
</configuration>