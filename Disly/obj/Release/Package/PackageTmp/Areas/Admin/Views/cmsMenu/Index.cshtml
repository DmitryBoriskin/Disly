@model cmsMenuViewModel


    <div id="Content">
        <div id="TitleBlock">@ViewBag.Title</div>
        <div class="cmsMenuList">
            @if (Model.Menu.cmsMenuTop != null)
            {
                <div class="TopAdmin Sortable ui-sortable" data-service="/Admin/Services/ChangePermit?group=cmsMenu">
                    @foreach (cmsMenuModel Item in Model.Menu.cmsMenuTop)
                    {
                        <div class="cmsMenu_Item ui-sortable-handle" data-id="@Item.id">
                            @Html.ActionLink(@Item.Title, "Edit", new { area = "Admin", controller = "cmsMenu", id = @Item.id })
                        </div>
                    }
                </div>
            }
            @if (Model.Menu.cmsMenuSettings != null)
            {
                <div class="CenterAdmin Sortable ui-sortable" data-service="/Admin/Services/ChangePermit?group=cmsMenu">
                    @foreach (cmsMenuModel Item in Model.Menu.cmsMenuSettings)
                    {
                        <div class="cmsMenu_Item ui-sortable-handle" data-id="@Item.id">
                            @Html.ActionLink(@Item.Title, "Edit", new { area = "Admin", controller = "cmsMenu", id = @Item.id })
                        </div>
                    }
                </div>
            }
        </div>
    </div>

    <div id="DopInfo"></div>

<div id="Buttons">
    <a class="Button BtnCreate" href="/admin/cmsMenu/Create/@Guid.NewGuid()">Создать</a>
</div>
