@model SectionGroupModel

@using (Html.BeginForm())
{
    <div>
        @if (ViewBag.SuccesAlert != null)
        {
            <div class="alert alert-success" role="alert">@ViewBag.SuccesAlert</div>
        }
        else if (@ViewBag.FailAlert != null)
        {
            <div class="alert alert-danger" role="alert">@ViewBag.FailAlert</div>
        }
        @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })

        <div style="overflow:hidden;">
            @Html.HiddenFor(m => m.SectionId, new { @value = @Model.SectionId })
            @Html.HiddenFor(m => m.Guid, new { @value = @Model.Guid })
            @Html.HiddenFor(m => m.Permit, new { @value = @Model.Permit })

            <div style="overflow:hidden;">
                <div class="col-xs-4">
                    @Html.TextBoxFor(m => m.Alias, new { @class = "uc_input", @title = "Название группы (на английском)", @required = "" })
                </div>
                <div class="col-xs-4">
                    @Html.TextBoxFor(m => m.Title, new { @class = "uc_input", @title = "Отображаемое имя" })
                </div>
                <div class="col-xs-4">
                    <div id="Buttons">
                        <p>&nbsp;</p>
                        @if (Model.Alias != null)
                        {
                            <button type="submit" name="action" value="update-btn-group" class="BtnSave">Сохранить</button>
                            <button type="submit" name="action" value="delete-btn-group" class="BtnDelete">Удалить</button>
                        }
                        else
                        {
                            <button type="submit" name="action" value="create-btn-group" class="BtnCreate">Создать</button>
                        }
                    </div>
                </div>
            </div>
            @if (Model.Alias != null)
            {
                @Html.CheckBoxFor(m => m.ReadOnly, new { @class = "uc_input", @title = "Запретить редактирование" })
                @Html.CheckBoxFor(m => m.Filtr, new { @class = "uc_input", @title = "Фильтр" })
            }
        </div>
    </div>
}

@Styles.Render("~/bundles/popUp_css")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/popUp_js")