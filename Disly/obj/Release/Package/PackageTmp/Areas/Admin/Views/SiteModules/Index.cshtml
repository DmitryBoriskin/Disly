@model SiteModulesViewModel

@Html.Partial("Partial/Confirm")
@Html.Partial("Partial/Frame")
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div id="Buttons">
        @Html.ActionLink("Создать", "Create", "siteModules", new { @id= @Guid.NewGuid() }, new { @class="Button BtnCreate" })
    </div>
    
    <div id="Content">
        <div id="TitleBlock">@ViewBag.Title</div>
        @if (Model.SiteModulesList.Length > 0)
        {
            foreach (SiteModulesModel module in Model.SiteModulesList)
            {
                <div class="ListItem User">
                    @Html.ActionLink(@module.Name, "Edit", "siteModules", new { id = @module.Id }, new { @title = "Перейти к редактированию" })
                    <div>@module.Alias</div>
                </div>
            }
        }
        else
        {
            <p>Нет доступных модулей.</p>
        }
    </div>
}