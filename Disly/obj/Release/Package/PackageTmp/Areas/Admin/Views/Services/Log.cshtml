@model ServicesViewsModel

@using (Html.BeginForm())
{
    <div>
        @if (Model.getLogList != null)
        {

        <div id="LogListTitle">
            <div class="HeadLogItem">
                <div class="DateBlock HeadBlock">
                    Дата
                </div><div class="ActionBlock HeadBlock">
                    Действие
                </div><div class="UserBlock HeadBlock">
                    Пользователь
                </div>
            </div>
        </div>

        <div id="LogList" class="Scrollbar">
            @foreach (cmsLogModel ItemLog in Model.getLogList)
            {
                <div class="LogItem">
                    <div class="DateBlock">
                        @ItemLog.Date
                    </div><div class="ActionBlock">
                        @ItemLog.Action
                    </div><div class="UserBlock">
                        <a target="_blank" title="" href="/Users/edit/@ItemLog.UserId">@ItemLog.Surname @ItemLog.Name</a>
                    </div>
                </div>
            }
        </div>
        }
        else
        {
            <div id="LogListTitle">
                <div class="LogItem">Нету записей в логах</div>
            </div>
       }
    </div>
}

@Styles.Render("~/bundles/popUp_css")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/popUp_js")