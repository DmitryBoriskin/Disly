@{ 
    Layout = "~/Views/Shared/_Layout_Culture.cshtml";
}


<div id="page">
    <div class="page_wr">
        @Html.Partial("Partial/PagePathPartial")
        <div class="row page_type">
            <div id="news" class="col-md-12">
                @if (Model.NewsItem != null)
                {   
                    <div class="title"><h1>@Model.NewsItem.Title</h1></div>
                    <div class="bottom_line">
                        @if (Model.NewsItem.Photo != null)
                        {
                            <img class="map_img" src="@Model.NewsItem.Photo" />
                        }                        
                        @Html.Raw(@Model.NewsItem.Text)
                    </div>
                }
                else
                {
                    <p>Новость не найдена</p>
                }
            </div>
        </div>        

    </div>
</div>