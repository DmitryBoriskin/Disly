@model BannersViewModel
@{
    FilterViewModel model = ViewBag.Filter;
}

@using (Html.BeginForm())
{
    <div id="Buttons">
        @if (Model.UserResolution.Write)
        {
            @Html.ActionLink("Создать", "create", new { area = "Admin", controller = "banners", id = @Guid.NewGuid() }, new { @class = "Button BtnCreate" })
        }
    </div>
    <div id="Content">
        <div id="TitleBlock">@ViewBag.Title</div>

        @if (Model.UserResolution.Read)
        {
            if (Model.List != null)
            {
                foreach (cmsBannersModel Item in Model.List)
                {
                    <div class="ListItem User">
                        @if (@Item.Photo != string.Empty && @Item.Photo != null)
                        {

                            <a class="LI_Imege" href="/admin/banners/edit/@Item.Id/">
                                <img title="@Item.Photo" src="@Item.Photo" alt="@Item.Title" />
                            </a>
                        }                        
                        @Html.ActionLink(@Item.Title, "Edit", new {area = "Admin", controller = "banners", id = @Item.Id }, new { @class = "LI_Caption" })
                        <div class="LI_Date">
                            <span>Дата публикации: </span> @Convert.ToDateTime(Item.Date).ToString("dd MMMM yyyy")
                        </div>
                        <div><span>Тип: </span>@Item.TypeText</div>
                        <div><span>Секция: </span>@Item.SectionText</div>
                    </div>

                }
            }
            else { <p>Данный раздел пустой.</p>}
        }
        else
        { <p>У Вас нет прав на чтение новостей.</p>}
    </div>



    <div id="DopInfo">
        <div class="DopCaption">Фильтр</div>
        @Html.Partial("Partial/Filter", model)        
    </div>
}
