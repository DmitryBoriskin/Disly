@model PageViewsViewModel

@using (Html.BeginForm())
{
    <div id="Buttons">
        @if (Model.UserResolution.Write)
        {
            <a class="Button BtnCreate" href="/admin/PageViews/Create/@Guid.NewGuid()">Создать</a>
        }
        
    </div>

    if (Model.UserResolution.Read)
    {
        <div id="Content">
            <div id="TitleBlock">@ViewBag.Title</div>
            @foreach (cmsPageViewsModel Item in Model.List)
            {
                <div class="ListItem User">
                    <a class="LI_Caption" href="/admin/PageViews/edit/@Item.id/">@Item.Title</a>

                </div>
            }

        </div>
        <div class="DopInfo">

        </div>
    }
    else { <div id="Content"><p>У вас недостаточно прав</p></div>}


}


