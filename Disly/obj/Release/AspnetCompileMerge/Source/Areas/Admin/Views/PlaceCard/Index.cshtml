@model PlaceCardViewModel

@using (Html.BeginForm())
{
    <div id="Buttons">
        @if (Model.UserResolution.Write)
        {            
            @Html.ActionLink("Создать", "create", new { area = "Admin", controller = "PlaceCard", id = @Guid.NewGuid() }, new { @class = "Button BtnCreate"})
        }
    </div>

    <div id="Content">
        <div id="TitleBlock">@ViewBag.Title</div>
        @if (Model.UserResolution.Read)
        {
            if (Model.List.Length != 0)
            {
                foreach (PlaceCardModel Item in Model.List)
                {
                    <div class="ListItem User">
                        @if (@Item.Photo != string.Empty && @Item.Photo != null)
                        {
                            <a class="LI_Imege" href="/admin/placecard/edit/@Item.id/">
                                <img src="@Item.Photo" alt="Редактировать">
                            </a>
                        }                        
                        @Html.ActionLink(@Item.Title, "edit", new { area = "Admin", controller = "PlaceCard", id = @Item.id }, new { @class = "LI_Caption" })
                        <div class="LI_Date">
                            <span>Начало события: </span> @Convert.ToDateTime(Item.DateStart).ToString("dd MMMM yyyy")
                        </div>
                        <div class="LI_Date">
                            <span>Окончание события: </span> @Convert.ToDateTime(Item.DateEnd).ToString("dd MMMM yyyy")
                        </div>
                    </div>

                }
            }
            else { <p>В разделе нет событий.</p> }
        }
        else { <p>У Вас нет прав на просмотр событий.</p>}


    </div>
}
