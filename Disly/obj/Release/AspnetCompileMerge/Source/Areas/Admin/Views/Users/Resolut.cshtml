@model UsersViewModel

@using (Html.BeginForm())
{
    <div id="UpFrame" class="container" >
        <div class="row">
            
            <div class="col-xs-12">
                <div id="UserInfo">
                    <div class="ListItem User">
                        <a class="LI_Caption">@Model.User.C_Surname  @Model.User.C_Name</a>
                        <div class="LI_Desc">
                            <span>E-Mail: </span> @Model.User.C_EMail
                        </div>
                    </div>
                </div>    
                          
                
                
            </div>
                @if (ViewBag.ActionName != "reate")
                {
                    <div class="col-xs-12">
                        <div id="UserResolutions">
                            <div id="PagesListTitle">
                                <div class="HeadItem">
                                    <div class="CB_Block HeadBlock">
                                        Удаление
                                    </div><div class="CB_Block HeadBlock">
                                        Изменение
                                    </div><div class="CB_Block HeadBlock">
                                        Создание
                                    </div><div class="CB_Block HeadBlock">
                                        Просмотр
                                    </div><div class="PageName HeadBlock">
                                        Раздел CMS
                                    </div>
                                </div>
                            </div>
                            <div id="PagesList">

                                @foreach (ResolutionsModel Resolut in Model.ResolutionsList)
                                {
                                    <div class="TableItem">
                                        <div class="CB_Block">
                                            <span data-user="@Resolut.UserId" data-url="@Resolut.MenuId" data-action="delete">
                                                <input id="ctl17" type="checkbox" name="ctl17" checked="@Resolut.Delete" }>
                                            </span>
                                        </div>
                                        <div class="CB_Block">
                                            <span data-user="@Resolut.UserId" data-url="@Resolut.MenuId" data-action="change">
                                                <input id="ctl17" type="checkbox" name="ctl17" checked="@Resolut.Change" }>
                                            </span>
                                        </div>
                                        <div class="CB_Block">
                                            <span data-user="@Resolut.UserId" data-url="@Resolut.MenuId" data-action="write">
                                                <input id="ctl17" type="checkbox" name="ctl17" checked="@Resolut.Write" }>
                                            </span>
                                        </div>
                                        <div class="CB_Block">
                                            <span data-user="@Resolut.UserId" data-url="@Resolut.MenuId" data-action="read">
                                                <input id="ctl17" type="checkbox" name="ctl17" checked="@Resolut.Read" }>
                                            </span>
                                        </div>
                                        <div class="PageName HeadBlock">@Resolut.MenuTitle</div>
                                    </div>

                                }

                            </div>
                        </div>
                    </div>
                            }
                        </div>
                    </div>
                }
@Styles.Render("~/bundles/css")
<link type="text/css" href="/Content/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<link type="text/css" href="/Content/plugins/mCustomScrollbar/jquery.mCustomScrollbar.css" rel="stylesheet" />
@Scripts.Render("~/bundles/jquery")
<script type="text/javascript" src="/Content/plugins/bootstrap/js/bootstrap.min.js"></script>
<script type="text/javascript"  src="/Scripts/uc_script.js"></script>
<script type="text/javascript" src="/Content/plugins/mCustomScrollbar/jquery.mCustomScrollbar.js"></script>
<script type="text/javascript" src="/Scripts/Script.js"></script>


