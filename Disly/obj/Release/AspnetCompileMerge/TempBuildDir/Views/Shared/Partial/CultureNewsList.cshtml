@if(Model.NewsList != null)
{
    int newsCount = (Model.NewsList.Length < 2) ? Model.NewsList.Length : 2;    

    <div>
        <div class="header_title">
            Новости культуры
        </div>
        <div class="afisha_rss">
            <a href="#" class="rss_lk">rss</a>
        </div>
        <div class="all_info">
            <a href="/news/">Все новости</a>
        </div>
    </div>

    <div class="newnews">

        @for(int i = 0; i < newsCount; i++)
        {
            <div class="newnews_item">
                <div class="newnews_date"><span>@Model.NewsList[i].Date.ToString("dd.MM.yyyy")</span></div>
                <a href="/news/@Model.NewsList[i].id" class="newnews_title">@Model.NewsList[i].Title</a>
                @if(@Model.NewsList[i].UrlName != null)
                {
                    <div class="newnews_source">
                        <span>Источник:</span>
                        <div class="newnews_source_text">
                            @if(@Model.NewsList[i].Url != null)
                            {
                                <a href="@Model.NewsList[i].Url" title="@Model.NewsList[i].UrlName">@Model.NewsList[i].UrlName</a> 
                            }
                            else { @Model.NewsList[i].UrlName }
                        </div>
                    </div>
                }
                <a class="newnews_all" href="/news/@Model.NewsList[i].id">Читать дальше</a>
            </div>
        }
    </div>
}