@if (Model.PagePath != null)
{
    <ol class="breadcrumb">
        <li><a href="/">Главная</a></li>        

        @foreach (pagePathModel Item in Model.PagePath)
        {
            <li>
                @if (Item.Url != String.Empty)
                {
                    <a href="@(Item.Path+Item.Alias)/">@Item.Title</a>
                }
                else
                {
                    <a href="@Item.Url">@Item.Title</a>
                }
            </li>
        }
    </ol>
}