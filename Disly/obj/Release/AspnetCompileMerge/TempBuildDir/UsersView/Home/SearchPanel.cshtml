@model PageViewModel

<div id="search-panel">

  <div id="common-panel" class="panel-group">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title">
          <a data-toggle="collapse" href="#common-collapse">

           <h3>
            <i class="fa fa-angle-up"></i>&nbsp;
            Общие характеристики
          </h3>
        </a>
      </h2>
    </div>

    <div id="common-collapse" class="panel-collapse collapse in">
      <ul class="list-group">

        <li class="list-group-item">
          <div class='search-block'>                             
            <h5><i class="fa fa-caret-right fa-2x"></i> ТИП ОБРАЗОВАТЕЛЬНОГО УЧРЕЖДЕНИЯ </h5>
            <form id="edu-type-block" role="form">
              <div class="checkbox checkbox-primary">
                <input id="cb_edu_kinder" class="styled pull-left uncheck" type="checkbox" key="type" val="preschool" show="preschool" @( Model.CheckedValues.Contains("preschool") ? "checked" : "")>
                <label for="cb_edu_kinder">
                  Дошкольное                       
                </label>
              </div> 
              <div class="checkbox checkbox-primary">
                <input id="cb_edu_school" class="styled uncheck" type="checkbox" key="type" val="general" show="general" @( Model.CheckedValues.Contains("general") ? "checked" : "")>
                <label for="cb_edu_school">
                  Общеобразовательное
                </label>
              </div> 
              <div class="checkbox checkbox-primary">
                <input id="cb_edu_special" class="styled uncheck" type="checkbox" key="type" val="special" show="special" @( Model.CheckedValues.Contains("special") ? "checked" : "")>
                <label for="cb_edu_special">
                  Средне-специальное
                </label>
              </div> 
              <div class="checkbox checkbox-primary">
                <input id="cb_edu_high" class="styled uncheck" type="checkbox" key="type" val="high" show="high" @( Model.CheckedValues.Contains("high") ? "checked" : "")>
                <label for="cb_edu_high">
                  ВУЗ
                </label>
              </div>                                     
            </form>
          </div>
        </li>



        <li id="sort-block" class="list-group-item sort-list">
          <div class='search-block'>
            <h5><i class="fa fa-caret-right fa-2x"></i>ВИД ОБРАЗОВАТЕЛЬНОГО УЧРЕЖДЕНИЯ</h5>

            <div class="checkbox checkbox-primary hideable preschool">
              <input id="private_kinder_cb" class="styled pull-left uncheck" type="checkbox" key="sort" val="private_kinder"  @( Model.CheckedValues.Contains("private_kinder") ? "checked" : "")>
              <label for="private_kinder_cb">
                Частный д/c                       
              </label>
            </div> 

            <div class="checkbox checkbox-primary general hideable">
              <input id="gymnasium_cb" class="styled pull-left uncheck" type="checkbox" key="sort" val="gymnasium"  @( Model.CheckedValues.Contains("gymnasium") ? "checked" : "")>
              <label for="gymnasium_cb">
                Гимназия                       
              </label>
            </div> 

            <div class="checkbox checkbox-primary general hideable">
              <input id="middle_school_cb" class="styled pull-left uncheck" type="checkbox" key="sort" val="middle_school"  @( Model.CheckedValues.Contains("middle_school") ? "checked" : "")>
              <label for="middle_school_cb">
                Средняя школа                       
              </label>
            </div> 

            <div class="checkbox checkbox-primary general hideable">
              <input id="internat_cb" class="styled pull-left uncheck" type="checkbox" key="sort" val="internat"  @( Model.CheckedValues.Contains("internat") ? "checked" : "")>
              <label for="internat_cb">
                Школа-интернат                      
              </label>
            </div> 

            <div class="checkbox checkbox-primary hideable special">
              <input id="tecnical_cb" class="styled pull-left uncheck" type="checkbox" key="sort" val="tecnical"  @( Model.CheckedValues.Contains("tecnical") ? "checked" : "")>
              <label for="tecnical_cb">
                Техникум                      
              </label>
            </div> 

            <div class="checkbox checkbox-primary high hideable">
              <input id="institution_cb" class="styled pull-left uncheck" type="checkbox" key="sort" val="institution"  @( Model.CheckedValues.Contains("tecnical") ? "checked" : "")>
              <label for="institution_cb">
                Институт                      
              </label>
            </div> 

            <div class="checkbox checkbox-primary high hideable">
              <input id="university_cb" class="styled pull-left uncheck" type="checkbox" key="sort" val="university"  @( Model.CheckedValues.Contains("tecnical") ? "checked" : "")>
              <label for="university_cb">
                Университет                      
              </label>
            </div> 
          

          </div>
        </li>


@*         <li class="list-group-item sort-list">
          <div class='search-block'>
            <h5><i class="fa fa-caret-right fa-2x"></i>ВИД ОБРАЗОВАТЕЛЬНОГО УЧРЕЖДЕНИЯ</h5>
            <a class="hidden-radio" href="/1">Частный д/c</a>,
            <a class="hidden-radio" href="/2">Гимназия</a>,
            <a class="hidden-radio" href="/3">Средняя школа</a>,
