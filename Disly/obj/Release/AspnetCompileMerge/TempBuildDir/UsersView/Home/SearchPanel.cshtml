            <a class="hidden-radio" href="/5">Техникум</a>,
            <a class="hidden-radio" href="/6">Институт</a>,
            <a class="hidden-radio" href="/7">Университет</a>
            <br>
            <br>
            <button class="btn btn-default">Выбрать несколько</button>
          </div>
        </li> *@

        <li id="city-block" class="list-group-item">
          <div class='search-block'>

            <h5><i class="fa fa-caret-right fa-2x"></i> НАСЕЛЁННЫЙ ПУНКТ </h5>
            <form id="city-block" role="form">
              @foreach(var item in Model.CityList)
              {
              <div class="checkbox checkbox-primary">
                <input  key="city" val="@item.CityAlias" id="@item.CityAlias" class="styled pull-left" type="checkbox"  @( Model.CheckedValues.Contains(item.CityAlias) ? "checked" : "")>
                <label for="@item.CityAlias">
                  @item.CityFullTitle                     
                </label>
              </div> 
              }
              <button id="more-btn" class="btn btn-default" onClick="event.preventDefault();more_city();">Ещё</button>
              <button id="less-btn" class="btn btn-default" onClick="event.preventDefault();less_city();" style="display:none;">Скрыть</button>
            </form>
          </div>
        </li>

      </ul>
    </div>
  </div>
</div>

<div id="education-panel" class="panel-group search-panel">
  <div class="panel panel-default">
    <div class="panel-heading">
     <h2 class="panel-title">
       <a data-toggle="collapse" href="#education-collapse">

        <h3>
         <i class="fa fa-angle-up "></i>&nbsp;
         Учебный процесс
       </h3>
     </a>
   </h2>
 </div>
 <div id="education-collapse" class="panel-collapse collapse in">
  <ul class="list-group">

    @foreach(var item in Model.EduProcKeys)
    {
    <li class="visible list-group-item @item[0].OrgType search-list hideable">
      <div class='search-block'>

        <h5><i class="fa fa-caret-right fa-2x"></i> @item[0].KeyTitle </h5>
        @foreach(var value in item)
        {
        <div class="checkbox checkbox-primary">
          <input form="search-form" id="@value.ValueAlias" name="@value.ValueAlias" class="styled valuequery " key="@value.KeyAlias" val="@value.ValueAlias" type="checkbox" @( Model.CheckedValues.Contains(value.ValueAlias) ? "checked" : "")>
          <label for="@value.ValueAlias">
            @Html.Raw(@value.ValueTitle)
          </label>
        </div>   
      }
    </div>
  </li>
}


</ul>
</div>
</div>
</div>


<div id="edu-item-panel" class="panel-group search-panel">
  <div class="panel panel-default">
    <div class="panel-heading">
     <h2 class="panel-title">
       <a data-toggle="collapse" href="#edu-item-collapse">

        <h3>
         <i class="fa fa-angle-up "></i>&nbsp;
         Оснащение
       </h3>
     </a>
   </h2>
 </div>
 <div id="edu-item-collapse" class="panel-collapse collapse in">
  <ul class="list-group">
    @foreach(var item in Model.StuffKeys)
    {
    <li class="visible list-group-item @item[0].OrgType search-list hideable">
      <div class='search-block'>

        <h5><i class="fa fa-caret-right fa-2x"></i> @item[0].KeyTitle </h5>
        @foreach(var value in item)
        {
        <div class="checkbox checkbox-primary">
          <input form="search-form" id="@value.ValueAlias" name="@value.ValueAlias" class="styled valuequery " key="@value.KeyAlias" val="@value.ValueAlias" type="checkbox" @( Model.CheckedValues.Contains(value.ValueAlias) ? "checked" : "")>
          <label for="@value.ValueAlias">
            @Html.Raw(@value.ValueTitle)
          </label>
        </div>   
      }
    </div>
  </li>
}
</ul>
</div>
</div>
</div>


<div id="additional-education-panel" class="panel-group search-panel">
  <div class="panel panel-default">
    <div class="panel-heading">
     <h2 class="panel-title">
       <a data-toggle="collapse" href="#additional-education-collapse">

        <h3>
         <i class="fa fa-angle-up "></i>&nbsp;
         Дополнительное образование
       </h3>
     </a>
   </h2>
 </div>
     <div id="additional-education-collapse" class="panel-collapse collapse in">
          <ul class="list-group">
           @foreach(var item in Model.AddEduKeys)
           {
               <li class="visible list-group-item @item[0].OrgType search-list hideable">
                    <div class='search-block'>

                      <h5><i class="fa fa-caret-right fa-2x"></i> @item[0].KeyTitle </h5>
                      @foreach(var value in item)
                      {
                          <div class="checkbox checkbox-primary">
                                <input form="search-form" id="@value.ValueAlias" name="@value.ValueAlias" class="styled valuequery " key="@value.KeyAlias" val="@value.ValueAlias" type="checkbox" @( Model.CheckedValues.Contains(value.ValueAlias) ? "checked" : "")>
                                <label for="@value.ValueAlias">
                                     @Html.Raw(@value.ValueTitle)
                                </label>
                          </div>   
                    }
                  </div>
            </li>
        }
        </ul>
    </div>
</div>
</div>

<div class="panel panel-default">
  <div class="panel-footer">
    <div class="search-block">
      <div class="row">
       <div class="col-xs-6">
         <form id="search-form" action="/list" method="get">
          <input class="send-btn filter-button center-block btn btn-lg btn-defaul" form="search-form" type="submit" value="Принять" onclick="search();">
        </form>
      </div>
        <div class="col-xs-6">
        <button class="filter-button center-block btn btn-lg btn-default" onClick="reset_checkbox();"><i class="fa fa-times"></i>&nbsp;Сбросить</button>
       </div>
    </div>
  </div>
</div>
</div>



</div>

