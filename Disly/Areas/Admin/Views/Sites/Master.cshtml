@model SitesViewModel

@if (Model.UserResolution.Write)
{
    <div class="content">
        <h1>Создать новый сайт <span></span></h1>
        <div class="row">
            <div class="col-xs-6">
                @Html.TextBoxFor(m => Model.Item.Title, new { @class = "uc_input", @required = "", @title = "Название сайта", @placeholder = "Название сайта", @MaxLength = "512" })
            </div>
            <div class="col-xs-6"></div>
        </div>
        <div style="overflow:hidden">
            <div style="width: 235px; margin-right: 2px; float:left;">@Html.TextBoxFor(m => Model.Item.Alias, new { @class = "uc_input", @required = "", @title = "Доменное имя (идентификатор сайта)", @placeholder = "domain", @MaxLength = "64" })</div>
            <div style="overflow: hidden; font: 14px Verdana; margin: 37px 0 0;">.@Settings.BaseURL</div>
        </div>
        <div class="row">
            <div class="col-xs-6">
                @Html.TextAreaFor(m => Model.Item.Title, new { @class = "uc_input", @title = "Список дополнительных доменных имен", @MaxLength = "512", @rows = "6", @data_help = "доменные имена должны разделяться запятой" })
            </div>
            <div class="col-xs-6"></div>
        </div>
        <button type="submit" name="action" value="cancel-btn" data-primary="true" class="button icon-save">Создать сайт</button>
    </div>

    
    
    <div class="buttons">
        @*<button type="submit" name="action" value="cancel-btn" class="button icon-cancel">Закрыть</button>*@
    </div>
}
