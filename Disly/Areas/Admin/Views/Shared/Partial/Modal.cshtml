@{
    string isOpen = (@Model.ErrorInfo != null) ? "true" : "false";
    string _title = String.Empty;
    string _info = String.Empty;

    if (Model.ErrorInfo != null)
    {
        _title = @Model.ErrorInfo.title;
        _info = @Model.ErrorInfo.info;
    }
}

<div class="modal fade" data-show="@isOpen">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">@_title</h4>
            </div>
            <div class="modal-body">@Html.Raw(@_info)</div>
            <div class="modal-footer">
                <div class="modal-footer-buttons pull-left">
                    @if (Model.ErrorInfo != null)
                    {
                        if (Model.ErrorInfo.buttons != null)
                        {
                            foreach (ErrorMassegeBtn btn in Model.ErrorInfo.buttons)
                            {
                                var btn_style = (@btn.style == null) ? "default" : btn.style;
                                var btn_action = (@btn.action == null) ? "default" : @btn.action;

                                <a href="@btn.url" class="btn btn-@btn_style" data-action="@btn_action">@btn.text</a>
                            }
                        }
                    }
                </div>
                <button type="button" class="button icon-cancel pull-right" data-dismiss="modal" data-action="noPreloader-accept">Закрыть</button>
            </div>
        </div>
    </div>
</div>