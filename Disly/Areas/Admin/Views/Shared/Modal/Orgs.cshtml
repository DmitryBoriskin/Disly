@model OrgsModalViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_popUp.cshtml";
}
<link rel="stylesheet" href="/Content/css/styles_popUp.css" />
<div>
    @if (Model != null)
    {
        <div class="buttons">
            <button type="submit" name="action" value="save-org-btn" class="btn btn-primary icon-create">СОХРАНИТЬ</button>
        </div>
        <input type="hidden" name="MaterialId" value="@Model.MaterialId" />
        <input type="hidden" name="ContentLink" value="@Model.ContentLink" />

        if (Model.OrgsTypes != null)
        {
            <div class="row">
                <div class="col-lg-12">
                    <ul class="org-byType-tree">
                        @foreach (var orgtype in Model.OrgsTypes)
                        {
                            <li>
                                <input type="checkbox" class="org-type-chkbx iCheck" data-init="false" />
                                @orgtype.Title

                                @if (orgtype.Sort == 1000)
                                {
                                    var list = Model.OrgsAll.Where(t => t.Types == null).ToArray();
                                    if (list.Any())
                                    {
                                        <ul>
                                            @foreach (var item in list)
                                            {
                                                <li>
                                                    <input type="checkbox" name="OrgsId[]" class="org-item-chkbx iCheck" value="@item.Id" data-init="false" />
                                                    @item.Title
                                                </li>
                                            }
                                        </ul>
                                    }
                                }
                                else
                                {
                                    var list = Model.OrgsAll.Where(t => t.Types != null && t.Types.Contains(orgtype.Id)).ToArray();
                                    if (list.Any())
                                    {
                                        <ul>
                                            @foreach (var item in list)
                                            {
                                                <li>
                                                    <input type="checkbox" name="OrgsId[]" class="org-item-chkbx iCheck" value="@item.Id" data-init="false" />
                                                    @item.Title
                                                </li>
                                            }
                                        </ul>
                                    }
                                }
                            </li>
                        }
                    </ul>
                </div>
            </div>
        }
    }
    else
    {
        <div id="log-list_title">
            <div class="alert alert-danger" role="alert">Список организаций для этой записи пуст.</div>
        </div>
    }
</div>
<script>
    $(".iCheck").iCheck({
        checkboxClass: 'icheckbox_square-blue',
        radioClass: 'icheckbox_square-blue'
        //increaseArea: '%' //optional
    });
</script>