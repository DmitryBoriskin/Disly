@*карта сайта плиткой*@
<div class="container">
    @if (Model.SitemapPlate != null && Model.SitemapPlate.Count() > 0)
    {
        <div class="sitemap-plates-block">
            <div class="row">
                @foreach (var item in Model.SitemapPlate)
                {
                    string fullPath = "/";

                    if (!string.IsNullOrEmpty(item.Url))
                    {
                        fullPath = item.Url;
                    }
                    else if (item.FrontSection.ToLower().Equals("page"))
                    {
                        fullPath = item.Path + item.Alias;
                    }
                    else
                    {
                        fullPath = "/" + item.FrontSection;
                    }
                    <div class="col-sm-6 col-md-3">
                        @if (!string.IsNullOrWhiteSpace(item.Photo.Url))
                        {
                            <a href="@fullPath" class="sitemap-plate sitemap-plate-image" title="@item.Title">
                                <img src="@item.Photo.Url" alt="@item.Title" />
                            </a>
                        }
                        else
                        {
                            <a href="@fullPath" class="sitemap-plate">@item.Title</a>
                        }
                    </div>
                }
            </div>
        </div>
    }
</div>
