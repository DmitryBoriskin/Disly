@model VoteViewModel
@if (Model.List != null)
{
    foreach (var item in Model.List)
    {

        <h3>@item.Header</h3>
        @Html.Raw(item.Text)

        if (item.ShowStatistic)
        {
            foreach (var answer in item.Answer)
            {
                string proc = ((100/answer.Statistic.AllVoteCount)* answer.Statistic.ThisVoteCount).ToString();
                <div class="vote_stat">
                    <div class="vote_stat_text">@answer.Variant <small>(@answer.Statistic.ThisVoteCount из @answer.Statistic.AllVoteCount)</small></div>
                    <div class="vote_stat_load_wr">
                        <div class="vote_stat_load" style="width:@proc%">@proc&nbsp;%</div>
                    </div>                    
                </div>
            }
        }
        else
        {
            <form action="/vote/givevote/@item.Id" class="vote_item" method="post">
                @if (item.Answer != null)
                {
                    foreach (var answer in item.Answer)
                    {
                        if (item.Type)
                        {
                            <div class="radio">
                                <label><input type="checkbox" name="r-@item.Id" value="@answer.id" />@answer.Variant</label>
                            </div>
                        }
                        else
                        {
                            <div class="checkbox">
                                <label><input type="radio" name="r-@item.Id" value="@answer.id" />@answer.Variant</label>
                            </div>
                        }
                    }
                    <button type="submit" class="btn btn-default">Проголосовать</button>                    
                }
            </form>
        }
        <br />
        <hr />
        <br />
    }
}
                 