@{
    ViewBag.Version = "1.0.1";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords" content="@ViewBag.keywords">
    <meta name="description" content="@ViewBag.description">
    <title> @ViewBag.Title </title>
    <link href="/Content/decor/chuvashia/favicon.ico" rel="shortcut icon">
    <link href="/Content/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Content/decor/chuvashia/styles.css" rel="stylesheet">
</head>

<body>
    <div class="container">
        <div class="row top-info">
            <div class="col-xs-6 date-info">
                <strong>Сегодня:</strong> @DateTime.Now.ToString("dd MMMM yyyy, dddd HH:mm")
            </div>
            <div class="col-xs-6 for-user">
                <a title="" href="">Реклама на портале</a>
                <a title="" href="">Правообладателям</a>
            </div>
        </div>
        <div class="body-block">
            <header>
                <div class="site-gid">

                </div>
                <div class="row">
                    <div class="col-xs-5 logo-block">
                        <a title="" href="">
                            <img alt="" title="" src="/Content/decor/chuvashia/chuvashia-logo.png" />
                        </a>
                    </div>
                    <div class="col-xs-3 weather-block"></div>
                    <div class="col-xs-4 exchange-block"></div>
                </div>
            </header>
            <div class="main-menu-block">
                <nav></nav>
            </div>
            <div class="content-block">
                @RenderBody()
            </div>
            <footer>
                <div class="row">
                    <div class="col-xs-4">
                        © Chuvashia.com, 2001-@DateTime.Now.ToString("yyyy")
                        <div>
                            Если какая-либо информация окажется неверной, устаревшей или просто отсутствует — просьба писать на internet@asoft.ru
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <div class="row">
                            <div class="col-xs-4">1</div>
                            <div class="col-xs-4">2</div>
                            <div class="col-xs-4">3</div>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
</body>


</html>