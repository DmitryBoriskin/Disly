@model PortalDoctorsViewModel

<div class="container">
    @Html.Partial("services/breadcrumbs")
    @if (Model.Doctor != null)
    {
        <h1>@Model.Doctor.FIO</h1>

        if (Model.Doctor.EmployeeInfo != null)
        {
            <div class="row">
                <div class="col-md-9">
                    <div>
                        <strong>Место работы: </strong>
                        @Model.Doctor.EmployeeInfo.UZ.Name
                    </div>

                    <div>
                        <strong>Занимаемая должность: </strong>
                        <ol>
                            @foreach (var p in Model.Doctor.EmployeeInfo.EmployeeRecords)
                            {
                                <li>@p.RecordPost.Name</li>
                            }
                        </ol>
                    </div>

                    <div>
                        <strong>Специальность по основной должности: </strong>
                        <ol>
                            @foreach (var p in Model.Doctor.EmployeeInfo.EmployeeRecords)
                            {
                                <li>@p.RecrodPosition.Name</li>
                            }
                        </ol>
                    </div>

                    <div>
                        <strong>Дата рождения: </strong>
                        @if (Model.Doctor.EmployeeInfo.Birthdate != null)
                        {
                            string birthDate = Convert.ToDateTime(Model.Doctor.EmployeeInfo.Birthdate).ToString("dd MMMM yyyy") + " г.";
                            @birthDate
                        }
                    </div>

                    <div>
                        <strong>Образовательные учреждения: </strong>
                        <ol>
                            @foreach (var e in Model.Doctor.EmployeeInfo.EmployeeSertificateEducation.OrderBy(o => o.IssueDate))
                            {
                                <li>
                                    <strong>Название: </strong>@e.IssueOrg.Name<br />
                                    <strong>Год выпуска: </strong>@(e.IssueDate != null ? Convert.ToDateTime(e.IssueDate).Year.ToString() + " г." : null)<br />
                                    <strong>Специальность: </strong>@e.EducationSpeciality.Name
                                </li>
                            }
                        </ol>
                    </div>

                    <div>
                        <strong>Стаж работы в отрасли: </strong>
                        <ol>
                            @foreach (var s in Model.Doctor.EmployeeInfo.EmployeeRecords.OrderBy(o => o.DateBegin))
                            {
                                string dateBegin = s.DateBegin != null ? Convert.ToDateTime(s.DateBegin).ToString("dd.MM.yyyy") + " г. " : null;
                                string dateEnd = s.DateEnd != null ? "—" + Convert.ToDateTime(s.DateEnd).ToString("dd.MM.yyyy") + " г. " : null;
                                string experience = dateBegin + dateEnd + s.RecordPost.Name + " " + s.Organisation;

                                <li>@experience</li>
                            }
                        </ol>
                    </div>

                    <div>
                        @if (Model.Doctor.EmployeeInfo.EmployeeAwards != null)
                        {
                            <strong>Награды: </strong>
                            <ol>
                                @foreach (var a in Model.Doctor.EmployeeInfo.EmployeeAwards.OrderBy(o => o.Issued))
                                {
                                    string dateAward = a.Issued != null ? Convert.ToDateTime(a.Issued).ToString("dd.MM.yyyy") + " г. " : null;
                                    <li>
                                        @dateAward + @a.Name
                                    </li>
                                }
                            </ol>
                        }
                    </div>
                </div>
                <div class="col-md-3">
                    @if (!string.IsNullOrEmpty(Model.Doctor.Photo))
                    {
                        <img src="@Model.Doctor.Photo" alt="@Model.Doctor.FIO" />
                    }
                </div>
            </div>
        }
    }
    else
    {
        <h1>Врачи</h1>
        <div class="row">
            <div class="col-md-9">
                <div class="row">
                    <div class="col-xs-12">
                        @if (Model.DoctorList != null)
                        {
                            <table class="table">
                                <tr>
                                    <th>Изображение</th>
                                    <th>ФИО</th>
                                    <th>Должность</th>
                                </tr>
                                @foreach (var item in Model.DoctorList.Doctors)
                                {
                                    string link = "/" + ViewBag.ControllerName + "/" + item.Id;
                                    <tr>
                                        <td>
                                            <a href="@link">
                                                <img src="@item.Photo" class="img-circle img-person-list" alt="@item.FIO" />
                                            </a>
                                        </td>
                                        <td><a href="@link">@item.FIO</a></td>
                                        <td>
                                            @if (item.Posts != null)
                                            {
                                                string posts = string.Empty;

                                                foreach (var p in item.Posts)
                                                {
                                                    string linkToOrg = p.OrgAlias != null ? "http://" + p.OrgAlias + ".med.cap.ru" : null;

                                                    <p>
                                                        @if (!string.IsNullOrWhiteSpace(linkToOrg))
                                                        {
                                                            <a target="_blank" href="@linkToOrg">@p.OrgTitle</a> @p.Name
                                                        }
                                                        else
                                                        {
                                                            @p.OrgTitle @p.Name
                                                        }
                                                    </p>
                                                }
                                            }
                                        </td>
                                    </tr>
                                }
                            </table>

                            Html.RenderAction("Pager", "Service", new { @Model = Model.DoctorList.Pager });
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <form role="form" class="filtr_news" action="/@ViewBag.ControllerName/">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group search_news">
                                <label class="label_filtr" for="search_news">Ключевые слова</label>
                                <input type="text" class="filtr_data form-control" name="searchtext" id="search_news" value="@ViewBag.SearchText" />
                            </div>
                        </div>
                       
                        @if (Model.PeoplePosts != null)
                        {
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="label_filtr">Специализации</label>
                                    <select class="form-control select2" name="type">
                                        <option value="">не выбрано</option>
                                        @foreach (var item in Model.PeoplePosts)
                                        {
                                            string selected = (item.Id.ToString() == ViewBag.Position) ? "selected" : string.Empty;
                                            <option value="@item.Id" @selected>@item.Name</option>
                                        }
                                    </select>

                                </div>
                            </div>
                        }

                        <div class="col-sm-12 control-filter">
                            <a class="btn btn-default pull-right" href="/@ViewBag.ControllerName">Очистить</a>
                            <button class="btn sub" type="submit">ПРИМЕНИТЬ</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    }
</div>