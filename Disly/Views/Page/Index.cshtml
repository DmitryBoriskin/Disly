@model TypePageViewModel
@{
    Layout = ViewBag.Layout;
    string classcontainer = (Model.SitesInfo.Alias != "main") ? "container" : "";
}
<div class="type-page">
    <div class="@classcontainer">
        @Html.Partial("services/breadcrumbs")
        @if (Model.Item != null)
        {
            <h1>@Model.Item.Title</h1>
        }

        @if (Model.Child != null)
        {
            if (!String.IsNullOrEmpty(Model.Item.Text))
            {
                <div class="col-md-3 col-md-offset-1 col-md-push-8">
                    @Html.Partial("part/childlist_sitemap")
                </div>
                <div class="col-md-8 col-md-pull-4">
                    @if (Model.Item != null)
                    {
                        @Html.Raw(Model.Item.Text)
                    }
                </div>

            }
            else
            {
                <div class="col-md-12">
                    @Html.Partial("part/childlist_sitemap")
                </div>
            }
        }
        else
        {
            <div class="col-md-12">
                @if (Model.Item != null)
                {
                    @Html.Raw(Model.Item.Text)
                }
            </div>
        }

        <br />
        @if (Model.Documents != null)
        {
            @Html.Partial("part/attachedFiles", Model.Documents)
        }
    </div>
</div>