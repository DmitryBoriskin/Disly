@model HomePageViewModel
@{
    var slider = Model.BannerArray
        .Where(w => w.SectionAlias.Equals("slider"))
        .Select(s => new
        {
            Title = s.Title,
            Url = s.Photo.Url,
            Text = s.Text,
            Link = Url
        });
    int i = 0;
}

<!-- слайдер -->
<div class="container-fluid">
    <div class="top-slider-wrapper">
        <div class="container">
            @if (slider != null && slider.Count() > 0)
            {
                <div id="myCarousel" class="carousel slide" data-ride="carousel">

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">

                        @foreach (var item in slider)
                        {
                            string active = i == 0 ? "active" : string.Empty;
                            string text = !string.IsNullOrEmpty(item.Text) ? item.Text : "&nbsp;";
                            i++;

                            <div class="item @active">
                                <div class="slider-item">
                                    <div class="slider-img">
                                        <a href="@item.Link">
                                            <img src="@item.Url" alt="@item.Title">
                                        </a>
                                    </div>
                                    <div class="slider-text-block">
                                        <div class="slider-text">
                                            @Html.Raw(text)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Left and right controls -->
                    @if (slider.Count() > 1)
                    {
                        <div class="slider-controls">
                            <a class="left" href="#myCarousel" data-slide="prev">
                                <span class="ti-arrow-circle-left"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="right" href="#myCarousel" data-slide="next">
                                <span class="ti-arrow-circle-right"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
<!-- конец слайдера -->