@model NewsViewModel

<div class="container">
    <h1>Новости</h1>
    @if (!String.IsNullOrEmpty(ViewBag.Alias))
    {
        <div>запись @ViewBag.Alias.ToString()</div>
    }
    else
    {
        <div>Список</div>
        <div>
            @if (!String.IsNullOrEmpty(ViewBag.Category))
            {
                <span>Категория</span>
                @ViewBag.Category.ToString()
            }
        </div>
    }
    @if (Model.List != null)
    {
        if (Model.List.Data != null)
        {
            foreach (var item in Model.List.Data)
            {
                <div class="col-md-4">
                    <div class="card">
                        <img class="card-img-top" src="http://via.placeholder.com/300x150" />
                        <div class="card-block">
                            <div class="card-title">@item.Title</div>
                            <span class="card-text">@item.Date.ToString("dd.MM.yyyy")</span>
                            <div>
                                <a class="btn btn-primary" href="/press/@item.">Подробнее</a>
                            </div>
                        </div>

                    </div>
                </div>
            }

        }
        Html.RenderAction("Pager", "Service", new { @Model = Model.List.Pager });
    }
    
</div>
