@model ContatcsViewModel
<div class="container">
    <h1>Как нас найти</h1>
    @if (Model.Structures != null)
    {
        foreach (var item in Model.Structures)
        {
            <div class="row">
                <div class="col-md-8">
                    <div>
                        <div>@item.Title</div>
                        <div>@item.Adress</div>                        
                    </div>                                        
                </div>
                <div class="col-md-4">
                    <div>
                        <div class="contact_info_it">
                            <div id="map-@item.Id" class="buildmap" data-zoom="11" style="width: 100%; height: 250px;" data-height="300" data-x="@item.GeopointX.ToString().Replace(",", ".")" data-y="@item.GeopointY.ToString().Replace(",", ".")" data-title="@Model.OrgItem.Title"></div>                                                        
                            <div>@item.Adress</div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
        }
    }
</div>
