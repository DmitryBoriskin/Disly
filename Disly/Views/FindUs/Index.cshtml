@model ContatcsViewModel
<div class="container">
    <h1>Как нас найти</h1>
    @if (Model.Structures != null)
    {
        foreach (var item in Model.Structures)
        {
            <div class="row">
                <div class="col-md-8">
                    <div>
                        @if (!string.IsNullOrEmpty(item.Title))
                        {
                            <h3>@item.Title</h3>
                        }

                        @if (!string.IsNullOrEmpty(item.Adress))
                        {
                            <div>
                                <span>Адрес: </span>@item.Adress
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(item.Phone))
                        {
                            <div><span>Телефон приёмной: </span>@item.Phone</div>
                        }
                        @if (!string.IsNullOrEmpty(item.PhoneReception))
                        {
                            <div><span>Телефон регистратуры: </span>@item.PhoneReception</div>
                        }
                        @if (!string.IsNullOrEmpty(item.Email))
                        {
                            <div>
                                <a href="mailto:@item.Email">@item.Email</a>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(item.Routes))
                        {
                            <div>
                                <p>&nbsp;</p>
                                <p><b>Как добраться:</b></p>
                                @Html.Raw(item.Routes)
                            </div>
                        }
                    </div>
                </div>
                <div class="col-md-4">
                    <div>
                        <div class="contact_info_it">
                            <div id="map-@item.Id" class="buildmap" data-zoom="13" style="width: 100%; height: 250px;" data-height="300" data-x="@item.GeopointX.ToString().Replace(",", ".")" data-y="@item.GeopointY.ToString().Replace(",", ".")" data-title="@Model.OrgItem.Title"></div>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <br />
        }
    }
</div>
