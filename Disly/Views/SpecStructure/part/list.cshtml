@model People[]

@if (Model != null && Model.Count() > 0)
{
    <div class="row">
        <div class="col-md-3 col-md-push-9">
            <form id="list-filter-form" role="form" class="filtr_news" action="/@ViewBag.ControllerName/">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group search_news">
                            <label class="label_filtr" for="search_news">Ключевые слова</label>
                            <input type="text" class="filtr_data form-control" name="searchtext" id="search_news" value="@ViewBag.SearchText" />
                        </div>
                    </div>
                    <div class="col-sm-12 control-filter">
                        <a class="btn btn-default pull-right" href="/@ViewBag.ControllerName">Очистить</a>
                        <button class="btn sub btn-primary" type="submit">Применить</button>
                    </div>
                </div>
            </form>
        </div>

        <div class="col-md-8 col-md-pull-3">
            <table class="table">
                @foreach (var item in Model)
                {
                    string link = "/doctors/" + item.Id;
                    string photo = (!string.IsNullOrWhiteSpace(item.Photo))
                          ? File.Exists(Server.MapPath(item.Photo))
                              ? item.Photo : "/Content/img/no_avatar.png"
                          : "/Content/img/no_avatar.png";
                    <tr>
                        <td class="adminlist_img_td">
                            <a target="_blank" href="@link">
                                <img class="img-circle img-person-list" alt="@item.FIO" src="@photo" />
                            </a>
                        </td>
                        <td>
                            <a class="adminlist_name" href="@link">@item.FIO</a>
                            @if (item.Posts != null && item.Posts.Count() > 0)
                            {
                                var postsByOrg = item.Posts.Where(p => p.OrgId != null).Any() ?
                                    item.Posts.Where(p => p.OrgId != null).GroupBy(p => p.OrgId) : null;
                                if (postsByOrg != null)
                                {
                                    foreach (var postByOrg in postsByOrg)
                                    {
                                        var org = postByOrg.Where(p => p.OrgId == postByOrg.Key).First();
                                        <p>
                                            @if (!string.IsNullOrWhiteSpace(org.OrgUrl))
                                            {
                                                string linkToOrg = string.Format("http://{0}", org.OrgUrl);
                                                <a target="_blank" href="@linkToOrg">@(org.OrgTitle):</a><br />
                                            }
                                            else
                                            {
                                                <b>@(org.OrgTitle):</b><br />
                                            }

                                            @foreach (var p in postByOrg)
                                            {
                                                <span> -@p.Name </span><br />
                                            }
                                        </p>
                                    }
                                }
                            }
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
}
